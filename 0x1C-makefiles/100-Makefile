CC = gcc
SRC = main.c file1.c file2.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
    $(CC) $(OBJ) -o $(NAME)

clean:
    $(RM) *.o *~ $(NAME)

oclean:
    $(RM) $(OBJ)

fclean: clean
    $(RM) $(NAME)

re: fclean all

$(OBJ): %.o: %.c m.h
    $(CC) $(CFLAGS) -c $< -o $@
